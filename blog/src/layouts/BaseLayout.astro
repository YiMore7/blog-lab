            console.error('Theme toggle button not found');
          }
        }

        if (document.readyState === 'loading') {
          document.addEventListener('DOMContentLoaded', () => {
            console.log('DOM loaded, initializing...');
            initTheme();
          });
        } else {
          console.log('DOM already ready, initializing...');
          initTheme();
        }
