---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  description: string;
  publishDate: Date;
  category: string;
}

const { title, description, publishDate, category } = Astro.props;

const formatDate = (date: Date) => {
  return new Date(date).toLocaleDateString('zh-CN', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};

const categoryMap = {
  life: '生活记录',
  product: '工作思考',
  ai: 'AI探索'
};
---

<BaseLayout title={title}>
  <article class="article">
    <header class="article-header">
      <div class="article-meta">
        <span class="category-badge">{categoryMap[category]}</span>
        <time class="article-date">{formatDate(publishDate)}</time>
      </div>
      <h1 class="article-title">{title}</h1>
      <p class="article-description">{description}</p>
    </header>

    <div class="article-content">
      <slot />
    </div>

    <footer class="article-footer">
      <a href="/blog/" class="back-button">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M19 12H5M12 19l-7-7 7-7"/>
        </svg>
        返回首页
      </a>
    </footer>
  </article>
</BaseLayout>

<style>
  .article {
    max-width: 800px;
    margin: 0 auto;
    animation: fade-in 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  }

  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .article-header {
    margin-bottom: 4rem;
    padding-bottom: 3rem;
    border-bottom: 1px solid var(--border-light);
    position: relative;
  }

  .article-header::after {
    content: '';
    position: absolute;
    bottom: -1px;
    left: 0;
    width: 100px;
    height: 2px;
    background: linear-gradient(90deg, var(--accent-primary), var(--accent-secondary));
  }

  .article-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .category-badge {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary));
    color: white;
    font-size: 0.875rem;
    font-weight: 600;
    border-radius: var(--radius-full);
    letter-spacing: 0.3px;
  }

  .article-date {
    font-size: 0.9375rem;
    color: var(--text-tertiary);
    font-weight: 500;
  }

  .article-title {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 800;
    line-height: 1.2;
    margin-bottom: 1.5rem;
    color: var(--text-primary);
    letter-spacing: -0.04em;
    background: linear-gradient(
      135deg,
      var(--text-primary) 0%,
      var(--accent-primary) 100%
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .article-description {
    font-size: 1.25rem;
    color: var(--text-secondary);
    line-height: 1.7;
    font-weight: 400;
  }

  .article-content {
    font-size: 1.125rem;
    line-height: 1.9;
    color: var(--text-primary);
  }

  .article-content :global(h2) {
    font-size: clamp(1.5rem, 4vw, 2.25rem);
    font-weight: 700;
    margin-top: 4rem;
    margin-bottom: 1.75rem;
    color: var(--text-primary);
    letter-spacing: -0.03em;
    line-height: 1.3;
    position: relative;
  }

  .article-content :global(h2)::before {
    content: '';
    position: absolute;
    left: -20px;
    top: 50%;
    transform: translateY(-50%);
    width: 4px;
    height: 70%;
    background: linear-gradient(180deg, var(--accent-primary), var(--accent-secondary));
    border-radius: 2px;
  }

  .article-content :global(h3) {
    font-size: clamp(1.25rem, 3vw, 1.75rem);
    font-weight: 600;
    margin-top: 3rem;
    margin-bottom: 1.5rem;
    color: var(--text-primary);
    letter-spacing: -0.02em;
    line-height: 1.4;
  }

  .article-content :global(p) {
    margin-bottom: 2rem;
    color: var(--text-secondary);
    line-height: 1.9;
  }

  .article-content :global(ul),
  .article-content :global(ol) {
    margin-left: 2rem;
    margin-bottom: 1.75rem;
  }

  .article-content :global(li) {
    margin-bottom: 0.75rem;
    color: var(--text-secondary);
  }

  .article-content :global(code) {
    background: var(--bg-tertiary);
    color: var(--accent-primary);
    padding: 0.3rem 0.6rem;
    border-radius: var(--radius-sm);
    font-size: 0.9em;
    font-family: 'SF Mono', Monaco, 'Cascadia Code', 'Courier New', monospace;
    border: 1px solid var(--border-light);
    font-weight: 600;
    box-shadow: 0 1px 2px rgba(139, 92, 246, 0.05);
  }

  .article-content :global(pre) {
    background: linear-gradient(135deg, #1e1e1e 0%, #252526 100%);
    color: #d4d4d4;
    padding: 2rem;
    border-radius: var(--radius-lg);
    overflow-x: auto;
    margin-bottom: 2rem;
    box-shadow: var(--shadow-lg);
    border: 1px solid var(--border-medium);
    position: relative;
  }

  .article-content :global(pre)::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, var(--accent-primary), var(--accent-secondary));
    border-radius: var(--radius-lg) var(--radius-lg) 0 0;
  }

  [data-theme="dark"] .article-content :global(pre) {
    background: linear-gradient(135deg, #0d1117 0%, #161b22 100%);
    border-color: var(--border-light);
  }

  .article-content :global(pre code) {
    background: transparent;
    color: inherit;
    padding: 0;
    font-size: 0.9375rem;
    border: none;
  }

  .article-content :global(blockquote) {
    border-left: 4px solid var(--accent-primary);
    padding: 1.75rem 2rem;
    margin: 3rem 0;
    background: linear-gradient(135deg, var(--bg-tertiary) 0%, var(--accent-light) 100%);
    border-radius: 0 var(--radius-lg) var(--radius-lg) 0;
    color: var(--text-secondary);
    font-style: italic;
    position: relative;
    box-shadow: var(--shadow-sm);
  }

  .article-content :global(blockquote)::before {
    content: '"';
    position: absolute;
    left: 1rem;
    top: 0.5rem;
    font-size: 4rem;
    color: var(--accent-primary);
    opacity: 0.2;
    font-family: Georgia, serif;
    line-height: 1;
  }

  .article-content :global(img) {
    max-width: 100%;
    height: auto;
    margin: 3rem 0;
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-xl);
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .article-content :global(img):hover {
    transform: scale(1.02);
  }

  .article-content :global(hr) {
    border: none;
    border-top: 1px solid var(--border-light);
    margin: 3.5rem 0;
  }

  .article-footer {
    margin-top: 6rem;
    padding-top: 3rem;
    border-top: 1px solid var(--border-light);
    position: relative;
  }

  .article-footer::before {
    content: '';
    position: absolute;
    top: -1px;
    left: 50%;
    transform: translateX(-50%);
    width: 100px;
    height: 2px;
    background: linear-gradient(90deg, transparent, var(--accent-primary), transparent);
  }

  .back-button {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 1rem;
    font-weight: 600;
    padding: 1rem 2rem;
    background: var(--bg-glass);
    backdrop-filter: blur(10px);
    border-radius: var(--radius-full);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    border: 1px solid var(--border-glass);
    box-shadow: var(--shadow-sm);
  }

  .back-button:hover {
    color: white;
    background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary));
    border-color: var(--accent-primary);
    transform: translateX(-6px);
    box-shadow: var(--shadow-lg);
  }

  .back-button:hover svg {
    transform: translateX(-4px);
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .back-button svg {
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  @media (max-width: 768px) {
    .article-title {
      font-size: 2.25rem;
    }

    .article-description {
      font-size: 1.125rem;
    }

    .article-content :global(h2) {
      font-size: 1.75rem;
    }

    .article-content :global(h3) {
      font-size: 1.375rem;
    }
  }
</style>
